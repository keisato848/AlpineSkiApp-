<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <ProduceReferenceAssembly>true</ProduceReferenceAssembly>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Views\新しいフォルダー\**" />
    <EmbeddedResource Remove="Views\新しいフォルダー\**" />
    <None Remove="Views\新しいフォルダー\**" />
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="Views\Result.xaml.cs" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="GettingStarted.txt" />
    <None Remove="outline_clear_black_18dp.png" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="GettingStarted.txt" />
    <EmbeddedResource Include="outline_clear_black_18dp.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
	<EmbeddedResource Include="PointList.json">
	  <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
	</EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Npgsql" Version="5.0.2" />
    <PackageReference Include="System.Text.Json" Version="5.0.2" />
    <PackageReference Include="Xamarin.Forms" Version="5.0.0.2012" />  
    <PackageReference Include="Xamarin.Essentials" Version="1.6.1" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Remove="Views\Result.xaml" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Views\CalcPoint.xaml.cs">
      <DependentUpon>CalcPoint.xaml</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <None Update="Settings.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>
</Project>