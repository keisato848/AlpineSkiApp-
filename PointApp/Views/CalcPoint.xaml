<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PointApp.Views.CalcPoint"
             xmlns:vm="clr-namespace:PointApp.ViewModels"
             Title="FIS/SAJ ポイント計算">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="Accent">#96d1ff</Color>
            <Color x:Key="Alert">#ff6347</Color>
            <Style x:Key="Heading" TargetType="Label">
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="TextColor" Value="{StaticResource Primary}"/>
            </Style>
            <DataTemplate x:Key="TopListView_Items">
                <ViewCell AutomationProperties.IsInAccessibleTree="True">
                    <Grid>
                        <Label Grid.Row="0" Text="{Binding DisplayPoint, Mode=TwoWay}" FontSize="Small"/>
                        <StackLayout Grid.Row="1" Orientation="Horizontal" HorizontalOptions="Start">
                            <Label Text="2本合計タイム（秒）" FontSize="Small"/>
                            <Entry Text="{Binding Time, Mode=TwoWay}" FontSize="Small"/>
                        </StackLayout>
                    </Grid>
                </ViewCell>
            </DataTemplate>
            <Style x:Key="TopListView" TargetType="ListView">
                <Setter Property="ItemTemplate" Value="{StaticResource TopListView_Items}"/>
                <Setter Property="IsVisible" Value="False"/>
                <Setter Property="SeparatorColor" Value="{StaticResource Accent}"/>
            </Style>
            <Style x:Key="PlayerEntry" TargetType="Entry">
                <Setter Property="WidthRequest" Value="250"/>
                <Setter Property="Placeholder" Value="選手名を入力してリストから追加してください"/>
                <Setter Property="MaxLength" Value="50"/>
                <Setter Property="IsVisible" Value="true"/>
                <!--WidthRequest="300" Placeholder="(例)山田太郎" MaxLength="30" IsVisible="true"-->
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <ScrollView Grid.Row="1">
            <StackLayout Orientation="Vertical" Padding="30,24,30,24" Spacing="10">
                <Label Text="最新のポイントリストから、ポイントを計算できます。" FontSize="14" Padding="0,0,0,0"/>
                <Label Text="1. 種目" Style="{StaticResource Heading}"/>
                <StackLayout Orientation="Horizontal" RadioButtonGroup.GroupName="EventTypes" RadioButtonGroup.SelectedValue="{Binding m_tournament.Types}">
                    <RadioButton Content="DH" CheckedChanged="RadioButton_CheckedChanged"/>
                    <RadioButton Content="SG" CheckedChanged="RadioButton_CheckedChanged"/>
                    <RadioButton Content="GS" CheckedChanged="RadioButton_CheckedChanged"/>
                    <RadioButton Content="SL" CheckedChanged="RadioButton_CheckedChanged"/>
                </StackLayout>
                <StackLayout>
                    <Label Text="2. スタート時のポイントTop5" Style="{StaticResource Heading}"/>
                    <ListView x:Name="StartAllList" IsVisible="False" HasUnevenRows="False" RowHeight="30" ItemSelected="StartAllList_ItemSelected">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <TextCell Text="{Binding JapaneseName, Mode=TwoWay}"/>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    <StackLayout HorizontalOptions="StartAndExpand" FlowDirection="LeftToRight" Orientation="Horizontal">
                        <Entry x:Name="StartPlayerEntry" Style="{StaticResource PlayerEntry}" PropertyChanged="PlayerEntry_PropertyChanged"/>
                        <Button x:Name="StartBtn_Add" FontSize="16" VerticalOptions="Center" Padding="20,5" Text="追加" Clicked="Button_Clicked"/>
                    </StackLayout>
                    <ListView x:Name="StartTopList" Style="{StaticResource TopListView}"/>
                </StackLayout>
                    <!--<Label Text="※タイムは小数点以下第2位まで入力してください。"/>-->
                <Label Text="3. 上位10名の選手" Style="{StaticResource Heading}"/>
                <ListView x:Name="FinishAllList" IsVisible="false" HasUnevenRows="False" RowHeight="30">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextCell Text="{Binding JapaneseName, Mode=TwoWay}"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <StackLayout HorizontalOptions="StartAndExpand" FlowDirection="LeftToRight" Orientation="Horizontal">
                    <Entry x:Name="FinishPlayerEntry" Style="{StaticResource PlayerEntry}" PropertyChanged="PlayerEntry_PropertyChanged"/>
                    <Button x:Name="FinishBtn_Add" FontSize="16" VerticalOptions="Center" Padding="20,5" Text="追加" Clicked="Button_Clicked"/>
                </StackLayout>
                <ListView x:Name="FinishTopList" Style="{StaticResource TopListView}" IsVisible="False"/>
            <StackLayout>
                    <Label FontSize="14" Padding="0,24,0,0">
                        <!--
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="本サイトの利用規約に同意いただいた上で、ご利用ください。("/>
                                <Span Text="https://aka.ms/xamarin-quickstart)" FontAttributes="Bold"/>
                            </FormattedString>
                        </Label.FormattedText>
                        -->
                    </Label>
                </StackLayout>
                <Button x:Name="Btn_Calc"
                        Margin="0,10,0,0" Text="計算する"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="White" 
                        Clicked="Btn_Calc_Clicked"
                        />
            </StackLayout>
        </ScrollView>
    </Grid>

</ContentPage>
