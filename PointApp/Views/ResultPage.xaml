<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PointApp.Views.ResultPage"
             BackgroundColor="{StaticResource Primary}"
             Visual="Material">
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness">
            <On Platform="iOS" Value="0,40,0,0" />
        </OnPlatform>
    </ContentPage.Padding>
    <ContentPage.Content>
        <Grid Margin="50">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <!--ペナルティポイント-->
            <StackLayout Grid.Row="0">
                <StackLayout Orientation="Horizontal">
                    <Label Text="ペナルティポイント" TextColor="WhiteSmoke" FontSize="Large" HorizontalOptions="FillAndExpand" />
                </StackLayout>
                <StackLayout Orientation="Horizontal" Margin="0,10">
                    <Label Text="FIS:" FontSize="Medium" WidthRequest="100"/>
                    <Label x:Name="Label_FisPoint" FontSize="Medium" FontAttributes="Bold" />
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Label Text="SAJ:" FontSize="Medium" WidthRequest="100" />
                    <Label x:Name="Label_SajPoint" FontSize="Medium" FontAttributes="Bold" />
                </StackLayout>
            </StackLayout>
            <!--ペナルティポイント-->
            <!--選手のポイント-->
            <StackLayout Grid.Row="1" x:Name="Gird_UsersPoint" IsVisible="False" Margin="0,10">
                <StackLayout Orientation="Horizontal">
                    <Label Text="あなたのポイント" TextColor="WhiteSmoke" FontSize="Large" HorizontalOptions="FillAndExpand" />
                </StackLayout>
                <StackLayout Orientation="Horizontal" Margin="0,10">
                    <Label Text="FIS:" FontSize="Medium" WidthRequest="100"/>
                    <Label x:Name="Label_UsersFisPoint" FontSize="Medium" FontAttributes="Bold" />
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Label Text="SAJ:" FontSize="Medium" WidthRequest="100"/>
                    <Label x:Name="Label_UsersSajPoint" FontSize="Medium" FontAttributes="Bold" />
                </StackLayout>
            </StackLayout>
            <!--選手のポイント-->
            <Label Grid.Row="3" Text="※結果の正確性は保障しません。正式なポイントは公式リザルトを確認してください。"/>
            <Button Grid.Row="4" x:Name="dismissButton" Margin="0,20,0,0" Text="閉じる" Clicked="dismissButton_Clicked" FontAttributes="Bold" BackgroundColor="#FFFFFF" TextColor="{StaticResource Primary}"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>